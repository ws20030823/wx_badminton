/* pages/profile/profile.wxss */
.container {
  padding: 40rpx;
}

.profile-card {
  text-align: center;
  padding: 48rpx;
}

.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar.placeholder {
  background: #e0e0e0;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.login-btn {
  font-size: 30rpx;
  background: #3cc51f;
  color: #fff;
  padding: 20rpx 48rpx;
  border-radius: 12rpx;
}

.stats-card {
  margin-top: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.stats-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.stat-item {
  flex: 1;
  min-width: 30%;
  text-align: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.stat-item.full {
  min-width: 100%;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #3cc51f;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}
