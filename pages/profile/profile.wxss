/* pages/profile/profile.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.user-banner {
  background: linear-gradient(135deg, #7c4dff 0%, #512da8 100%);
  padding: 48rpx 40rpx 36rpx;
  margin-bottom: 24rpx;
}

.unlogin-row {
  display: flex;
  align-items: center;
}

.unlogin-row .avatar {
  margin-right: 28rpx;
}

.unlogin-text {
  flex: 1;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.login-btn-inline {
  padding: 0 48rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  color: #512da8;
  font-size: 30rpx;
  border-radius: 32rpx;
  border: none;
}

.login-btn-inline::after {
  border: none;
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-right: 28rpx;
}

.avatar.placeholder {
  background: rgba(255, 255, 255, 0.4);
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 24rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.stat-name {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
}

.level-row {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
}

.level-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.level-text {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
}

.level-link {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
  margin: 0 30rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 28rpx;
}

.service-grid {
  display: flex;
  justify-content: space-around;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.service-name {
  font-size: 26rpx;
  color: #666;
}

.service-item:active,
.more-item:active {
  opacity: 0.7;
}

.more-list {
  border-top: 1rpx solid #f0f0f0;
}

.more-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.more-item:last-child {
  border-bottom: none;
}

.more-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.more-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.more-item.logout .more-name {
  color: #c62828;
}

.more-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.page-bottom {
  height: 40rpx;
}
