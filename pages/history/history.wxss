/* pages/history/history.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.list-area {
  flex: 1;
  min-height: 0;
}

.list-inner {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.history-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-card:active {
  opacity: 0.92;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.match-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.mode-tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.card-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.stat-badge {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.stat-badge.wins {
  background: #e8f5e9;
  color: #2e7d32;
  font-weight: 500;
}

.stat-badge.losses {
  background: #ffebee;
  color: #c62828;
  font-weight: 500;
}

.stat-badge.winrate {
  background: #e3f2fd;
  color: #1565c0;
}

.card-link {
  font-size: 26rpx;
  color: #1565c0;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 120rpx 0;
  font-size: 28rpx;
}
