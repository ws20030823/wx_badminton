/* pages/match-detail/match-detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 140rpx;
}

.container .card {
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.match-info .match-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.match-meta {
  margin-bottom: 16rpx;
}

.mode-tag {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.match-stats,
.match-extras {
  font-size: 26rpx;
  color: #666;
}

.match-extras text {
  display: block;
  margin-top: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.player-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.player-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar-placeholder {
  background: #e0e0e0;
}

.empty-tip {
  color: #999;
  font-size: 28rpx;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.actions button {
  width: 100%;
  margin-bottom: 16rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.actions button:last-child {
  margin-bottom: 0;
}

.actions .btn-robot {
  background: #fff;
  color: #999;
  border: 2rpx solid #ddd;
}

.teams-display {
  font-size: 28rpx;
  color: #666;
}

/* Tab 导航 */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1565c0;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: #1565c0;
  border-radius: 3rpx;
}

.tab-content {
  margin-bottom: 24rpx;
}

/* 排名表格 */
.rankings-table {
  font-size: 26rpx;
}

.rank-header {
  display: flex;
  padding: 20rpx 0;
  font-weight: bold;
  color: #333;
  border-bottom: 2rpx solid #eee;
}

.rank-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rank-row:last-child {
  border-bottom: none;
}

.col-rank {
  width: 80rpx;
  text-align: center;
}

.col-player {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 0;
}

.col-wl, .col-pts, .col-net {
  width: 100rpx;
  text-align: center;
}

.col-net.net-positive {
  color: #2e7d32;
}

.col-net.net-negative {
  color: #999;
}

.avatar-sm {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

/* 对局卡片 */
.matchups-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.matchup-item {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #eee;
  transition: background 0.2s, border-color 0.2s;
}

.matchup-item:active {
  background: #f5f9ff;
  border-color: #1565c0;
}

.matchup-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.matchup-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.matchup-player {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 0;
}

.matchup-doubles .matchup-team {
  flex: 1;
  min-width: 0;
}

.matchup-team-text {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.matchup-vs-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.matchup-vs {
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
}

.matchup-score-display {
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
}

.matchup-winner {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #2e7d32;
}
