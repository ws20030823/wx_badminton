/* pages/match-detail/match-detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 140rpx;
}

.container .card {
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.match-info .match-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.match-meta {
  margin-bottom: 16rpx;
}

.mode-tag {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.match-stats,
.match-extras {
  font-size: 26rpx;
  color: #666;
}

.match-extras text {
  display: block;
  margin-top: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.player-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.player-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar-placeholder {
  background: #e0e0e0;
}

.empty-tip {
  color: #999;
  font-size: 28rpx;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.actions button {
  width: 100%;
  margin-bottom: 16rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.actions button:last-child {
  margin-bottom: 0;
}

.teams-display {
  font-size: 28rpx;
  color: #666;
}
