/* pages/doubles-mode/doubles-mode.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.mode-header {
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  padding: 48rpx 40rpx 60rpx;
}

.mode-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 8rpx;
}

.mode-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.content {
  margin-top: -30rpx;
  padding: 0 30rpx 40rpx;
}

.mode-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.mode-item:active {
  opacity: 0.9;
}

.mode-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  flex-shrink: 0;
}

.icon-blue {
  background: #1565c0;
}

.icon-green {
  background: #1b5e20;
}

.icon-gold {
  background: #f9a825;
}

.icon-text {
  font-size: 40rpx;
}

.mode-content {
  flex: 1;
  min-width: 0;
}

.mode-top {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.mode-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.mode-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  color: #fff;
}

.tag-rec {
  background: #2e7d32;
}

.tag-fun {
  background: #ef6c00;
}

.tag-comp {
  background: #c62828;
}

.mode-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.item-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 16rpx;
}

.hint-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  gap: 12rpx;
}

.hint-icon {
  font-size: 28rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
}
