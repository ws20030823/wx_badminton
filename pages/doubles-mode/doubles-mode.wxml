<!--pages/doubles-mode/doubles-mode.wxml - 双打模式选择-->
<view class="page">
  <!-- 蓝色渐变头部 -->
  <view class="mode-header">
    <text class="mode-label">当前模式</text>
    <text class="mode-title">双打/混双</text>
  </view>

  <view class="content">
    <view class="mode-item" bindtap="onSingleTurnTap">
      <view class="mode-icon-wrap icon-blue">
        <text class="icon-text">↻</text>
      </view>
      <view class="mode-content">
        <view class="mode-top">
          <text class="mode-name">双打单打转</text>
          <text class="mode-tag tag-rec">推荐</text>
        </view>
        <text class="mode-desc">搭档轮转对战,确保公平上场。</text>
      </view>
      <text class="item-arrow">></text>
    </view>

    <view class="mode-item" bindtap="onTeamTurnTap">
      <view class="mode-icon-wrap icon-green">
        <text class="icon-text">👥</text>
      </view>
      <view class="mode-content">
        <view class="mode-top">
          <text class="mode-name">双打小队转</text>
          <text class="mode-tag tag-fun">娱乐</text>
        </view>
        <text class="mode-desc">分组轮转,组内完全配对,适合朋友聚会。</text>
      </view>
      <text class="item-arrow">></text>
    </view>

    <view class="mode-item" bindtap="onKnockoutTap">
      <view class="mode-icon-wrap icon-gold">
        <text class="icon-text">🏆</text>
      </view>
      <view class="mode-content">
        <view class="mode-top">
          <text class="mode-name">双打晋级赛</text>
          <text class="mode-tag tag-comp">竞技</text>
        </view>
        <text class="mode-desc">残酷的淘汰赛制,胜者为王,决出最终排名。</text>
      </view>
      <text class="item-arrow">></text>
    </view>

    <view class="hint-bar">
      <text class="hint-icon">📌</text>
      <text class="hint-text">点击上方卡片选择具体规则</text>
    </view>
  </view>
</view>
