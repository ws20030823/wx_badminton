<!--pages/doubles-mode/doubles-mode.wxml - 双打模式选择-->
<view class="container">
  <view class="page-title">选择双打模式</view>

  <view class="mode-list">
    <view class="mode-item" bindtap="onSingleTurnTap">
      <text class="mode-name">双打单打转</text>
      <text class="mode-desc">搭档轮转对战</text>
    </view>

    <view class="mode-item" bindtap="onTeamTurnTap">
      <text class="mode-name">双打小队转</text>
      <text class="mode-desc">分组双打对战</text>
    </view>

    <view class="mode-item" bindtap="onKnockoutTap">
      <text class="mode-name">双打晋级赛</text>
      <text class="mode-desc">淘汰赛制双打</text>
    </view>
  </view>
</view>
