/* pages/index/index.wxss - 首页样式 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部蓝色横幅 */
.header-banner {
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
}

.main-title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 最新公告卡片 */
.announcement-card {
  margin: -40rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #2e7d32 0%, #1b5e20 100%);
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(46, 125, 50, 0.3);
}

.announcement-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.announcement-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.announcement-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 区块标题 */
.section {
  padding: 0 30rpx 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header-row {
  justify-content: space-between;
  align-items: center;
}

.section-left {
  display: flex;
  align-items: center;
}

.section-bar {
  width: 6rpx;
  height: 32rpx;
  background: #1565c0;
  border-radius: 3rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-link {
  font-size: 26rpx;
  color: #999;
}

/* 模式卡片行 */
.mode-row {
  display: flex;
  gap: 24rpx;
}

.mode-card {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 36rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.mode-card:active {
  opacity: 0.9;
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 44rpx;
  margin-bottom: 20rpx;
}

.mode-icon-singles {
  background: #e3f2fd;
  color: #1565c0;
}

.mode-icon-doubles {
  background: #e8f5e9;
  color: #2e7d32;
}

.mode-card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.mode-card-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.mode-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #ccc;
}

/* 战绩卡片 */
.record-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.record-empty {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  display: block;
}

.page-bottom {
  height: 40rpx;
}
