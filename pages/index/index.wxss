/* pages/index/index.wxss - 首页样式 */
.container {
  padding: 60rpx 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.mode-cards {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.mode-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.mode-card:active {
  transform: scale(0.98);
}

.card-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.card-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #999;
}
