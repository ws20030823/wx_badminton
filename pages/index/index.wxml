<!--pages/index/index.wxml - 首页-->
<view class="container">
  <view class="header">
    <text class="title">羽毛球组队</text>
    <text class="subtitle">选择比赛模式开始约球</text>
  </view>

  <view class="mode-cards">
    <view class="mode-card" bindtap="onSinglesTap">
      <view class="card-icon">🏸</view>
      <text class="card-title">单打</text>
      <text class="card-desc">单打转 / 小队转 / 晋级赛</text>
    </view>

    <view class="mode-card" bindtap="onDoublesTap">
      <view class="card-icon">👥</view>
      <text class="card-title">双打</text>
      <text class="card-desc">双打组队比赛模式</text>
    </view>
  </view>
</view>
