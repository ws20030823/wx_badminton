/* pages/create/create.wxss */
.container {
  padding: 40rpx;
}

.form-card {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item.half {
  flex: 1;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.readonly {
  display: block;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #333;
}

.picker {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.submit-btn {
  margin-top: 48rpx;
  width: 100%;
}
