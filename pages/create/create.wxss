/* pages/create/create.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.form-wrapper {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.readonly-card {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
}

.readonly-icon {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #2e7d32;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.readonly-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.readonly-hint {
  font-size: 24rpx;
  color: #999;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 28rpx;
}

.input-wrap .input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #666;
}

.input-wrap .input-icon.pin {
  font-size: 36rpx;
}

.input {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
}

.placeholder {
  color: #bbb;
}

.number-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.number-input {
  flex: 1;
  height: 88rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  text-align: center;
}

.number-sep {
  font-size: 28rpx;
  color: #999;
}

.picker-wrap {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 28rpx;
}

.picker-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.picker-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #bbb;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  margin-top: 48rpx;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}
