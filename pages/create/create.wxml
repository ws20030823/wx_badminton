<!--pages/create/create.wxml - 创建比赛-->
<view class="container">
  <view class="form-card card">
    <view class="form-item">
      <text class="label">比赛名称</text>
      <input
        class="input"
        placeholder="请输入比赛名称"
        value="{{name}}"
        bindinput="onNameInput"
      />
    </view>

    <view class="form-item">
      <text class="label">比赛模式</text>
      <text class="readonly">{{typeText}} - {{subModeText}}</text>
    </view>

    <view class="form-row">
      <view class="form-item half">
        <text class="label">最少人数</text>
        <input
          class="input"
          type="number"
          placeholder="4"
          value="{{minPlayers}}"
          bindinput="onMinPlayersInput"
        />
      </view>
      <view class="form-item half">
        <text class="label">最多人数</text>
        <input
          class="input"
          type="number"
          placeholder="8"
          value="{{maxPlayers}}"
          bindinput="onMaxPlayersInput"
        />
      </view>
    </view>

    <view class="form-item">
      <text class="label">比赛时间（选填）</text>
      <picker mode="date" value="{{time}}" bindchange="onTimeChange">
        <view class="picker">{{time || '选择日期'}}</view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">比赛地点（选填）</text>
      <input
        class="input"
        placeholder="请输入地点"
        value="{{location}}"
        bindinput="onLocationInput"
      />
    </view>

    <button class="btn-primary submit-btn" bindtap="onSubmit">创建比赛</button>
  </view>
</view>
