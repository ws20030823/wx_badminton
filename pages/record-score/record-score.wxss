/* pages/record-score/record-score.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.matchup-card {
  text-align: center;
}

.matchup-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.matchup-versus {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.player-block {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar-placeholder {
  background: #e0e0e0;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.vs-badge {
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
  flex-shrink: 0;
}

.form-card .form-item {
  margin-bottom: 32rpx;
}

.form-card .form-item:last-of-type {
  margin-bottom: 48rpx;
}

.form-card .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.score-input {
  width: 100%;
  height: 96rpx;
  background: #fafafa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.empty-tip {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 60rpx 0;
}
