/* pages/matches/matches.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.tabs-wrap {
  position: relative;
  display: flex;
  background: #fff;
  padding: 30rpx 60rpx 20rpx;
  justify-content: space-around;
}

.tab {
  font-size: 32rpx;
  color: #666;
  padding-bottom: 20rpx;
  transition: color 0.2s;
}

.tab.active {
  color: #333;
  font-weight: bold;
}

.tab-underline {
  position: absolute;
  bottom: 0;
  width: 80rpx;
  height: 6rpx;
  background: #2e7d32;
  border-radius: 3rpx;
  transition: left 0.2s;
}

.tab-hint {
  display: block;
  padding: 0 30rpx 24rpx;
  font-size: 26rpx;
  color: #999;
}

.list-area {
  flex: 1;
  height: 0;
}

.list-inner {
  padding: 0 30rpx 120rpx;
}

.match-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.match-card:active {
  opacity: 0.9;
}

.card-date {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.date-month {
  font-size: 22rpx;
  color: #999;
  letter-spacing: 1rpx;
}

.date-day {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.match-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.status-registering {
  background: #e8f5e9;
  color: #2e7d32;
}

.status-teaming {
  background: #e3f2fd;
  color: #1565c0;
}

.status-playing {
  background: #fff3e0;
  color: #e65100;
}

.status-finished {
  background: #f5f5f5;
  color: #757575;
}

.card-info {
  margin-bottom: 12rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.mode-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.result-link {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #1565c0;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
  font-size: 28rpx;
}
