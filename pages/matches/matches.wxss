/* pages/matches/matches.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 24rpx;
  gap: 24rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666;
  border-radius: 12rpx;
}

.tab.active {
  background: #3cc51f;
  color: #fff;
}

.list-area {
  flex: 1;
  padding: 24rpx;
}

.match-card {
  margin-bottom: 24rpx;
}

.match-card:active {
  opacity: 0.9;
}

.match-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.match-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.count {
  font-size: 26rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
}
