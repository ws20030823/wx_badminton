/* pages/matches/matches.wxss */
.page {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.search-bar-wrap {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  background: #fff;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.filter-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  flex-shrink: 0;
}

.filter-btn.active {
  background: #e8f5e9;
  color: #2e7d32;
}

.filter-icon {
  font-size: 28rpx;
  color: #666;
}

.filter-btn.active .filter-icon {
  color: #2e7d32;
}

.filter-badge {
  position: absolute;
  top: -4rpx;
  right: 4rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background: #2e7d32;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  text-align: center;
}

.tabs-wrap {
  padding: 20rpx 30rpx 24rpx;
  background: #fff;
}

.tabs-inner {
  display: flex;
  background: #f0f0f0;
  border-radius: 44rpx;
  padding: 6rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 64rpx;
  border-radius: 38rpx;
  transition: all 0.25s ease;
}

.tab-item.active {
  background: #fff;
  color: #2e7d32;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.list-area {
  flex: 1;
  min-height: 0;
}

.list-inner {
  padding: 0 30rpx 120rpx;
}

.swipe-cell {
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.swipe-delete {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #c62828 0%, #e53935 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 0 20rpx 20rpx 0;
  box-shadow: -4rpx 0 12rpx rgba(0, 0, 0, 0.08);
}

.swipe-card-wrap {
  position: relative;
  width: 100%;
  transition: transform 0.2s ease;
  background: #fff;
  border-radius: 20rpx;
}

.swipe-card-wrap .match-card {
  margin-bottom: 0;
  box-shadow: none;
}

.match-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.match-card:active {
  opacity: 0.9;
}

.card-date {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.date-month {
  font-size: 22rpx;
  color: #999;
  letter-spacing: 1rpx;
}

.date-day {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.match-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.status-registering {
  background: #e8f5e9;
  color: #2e7d32;
}

.status-teaming {
  background: #e3f2fd;
  color: #1565c0;
}

.status-playing {
  background: #fff3e0;
  color: #e65100;
}

.status-finished {
  background: #f5f5f5;
  color: #757575;
}

.card-info {
  margin-bottom: 12rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.mode-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.result-link {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #1565c0;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
  font-size: 28rpx;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  z-index: 100;
  visibility: hidden;
  transition: background 0.25s ease, visibility 0.25s ease;
}

.filter-mask.show {
  background: rgba(0, 0, 0, 0.4);
  visibility: visible;
}

.filter-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 70vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.filter-panel.show {
  transform: translateY(0);
}

.filter-panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-panel-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.filter-reset {
  font-size: 28rpx;
  color: #999;
}

.filter-confirm {
  font-size: 28rpx;
  color: #2e7d32;
  font-weight: 500;
}

.filter-section {
  padding: 24rpx 30rpx;
}

.filter-section-title {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-tag {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.filter-tag.selected {
  background: #e8f5e9;
  color: #2e7d32;
  font-weight: 500;
}
