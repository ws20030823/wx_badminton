<!--pages/singles-mode/singles-mode.wxml - 單打模式選擇-->
<view class="container">
  <view class="page-title">选择单打模式</view>

  <view class="mode-list">
    <view class="mode-item" bindtap="onSingleTurnTap">
      <text class="mode-name">单打转</text>
      <text class="mode-desc">轮转对战，每人场数相同</text>
    </view>

    <view class="mode-item" bindtap="onTeamTurnTap">
      <text class="mode-name">小队转</text>
      <text class="mode-desc">分组对战，组内循环</text>
    </view>

    <view class="mode-item" bindtap="onKnockoutTap">
      <text class="mode-name">晋级赛</text>
      <text class="mode-desc">淘汰赛制，胜者晋级</text>
    </view>
  </view>
</view>
